
@{
    Layout = null;
}

<script type="text/javascript">
    $(function () {
        QueryList();
    });

    function QueryList() {
        var json = {

        };
        $("#citylist").getPageList(20, "/api/Base/GetManageCityList", json, LoadData);
    }
    function LoadData(data, index) {
        $("#citylist tbody").empty();

        var str = "";
        $.each(data, function (key, val) {
            str = "";
            str += "<tr>";
            str += "<td>" + (index + key) + "</td>";
            str += "<td>" + val.name + "</td>";
            str += "<td>" + val.code + "</td>";
            str += "<td>" + (val.status === 1 ? "启用" : "<font color='red'>禁用</font>") + "</td>";
            str += "<td id='" + val.id + "'>";
            str += " <a onclick=\"getBodyHtml('mainbody', '/System/System/SysManageCityEdit?innerid=" + val.id + "');\" href='javascript:;'>修改</a></td>";
            str += "</tr>";
            $("#citylist tbody").append(str);
        });
    }

</script>
<div>
    <div style="padding-bottom:5px">
        <div class="row">
            <div class="col-lg-3 col-sm-3 col-xs-3">
                <div class="form-group">
                    <label for="cityname" class="col-sm-4 control-label no-padding-right searchLayout">城市名称：</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="cityname" placeholder="城市名称">
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-3 col-xs-3">
                <a href="javascript:void(0);" class="btn btn-palegreen shiny" onclick="QueryList();">查询</a>
                <a onclick="getBodyHtml('mainbody', '/System/System/SysManageCityEdit');" href="javascript:;" class="btn btn-primary shiny">添加</a>
            </div>
            <div class="col-lg-3 col-sm-3 col-xs-3">
            </div>
            <div class="col-lg-3 col-sm-3 col-xs-3">
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover table-bordered" id="citylist">
        <thead>
            <tr role="row">
                <th>序号</th>
                <th>城市名称</th>
                <th>城市编号</th>
                <th>状态</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr></tr>
        </tbody>
    </table>
</div>

