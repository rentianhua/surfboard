                        <div class="form-group">
                            <label for="" class="col-sm-2 control-label no-padding-right">所属部门：</label>
                            <div class="controls col-sm-10">
                                <select id="selectstatus" style="width: 100%;">
                                    <option value="0">业务部</option>
                                    <option value="1" selected>技术部</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        @*<div class="form-group">
                            <label for="email" class="col-sm-2 control-label no-padding-right">邮箱：</label>
                            <div class="controls col-sm-10">
                                <input type="email" id="email" class="form-control" placeholder="邮箱" />
                            </div>
                        </div>*@
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="mobile" class="col-sm-2 control-label no-padding-right">手机号：</label>
                            <div class="controls col-sm-10">
                                <input type="tel" id="mobile" class="form-control" placeholder="手机号" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label for="telphone" class="col-sm-2 control-label no-padding-right">电话号码：</label>
                            <div class="controls col-sm-10">
                                <input type="tel" id="telphone" class="form-control" placeholder="电话号码" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row form-group">
