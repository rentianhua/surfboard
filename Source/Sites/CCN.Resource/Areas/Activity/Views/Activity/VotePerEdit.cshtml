<script type="text/javascript">

    var perid = "@ViewBag.perid";
    var voteid = "";

    var imgs = [];
    var uploader;
    $(function () {
        InitUpload();
        Init();
    });

    function InitUpload() {
        var option = {};
        option.id = "pickfiles2";
        option.container = "container2";
        option.uptoken = "@ViewBag.uptoken";
        option.autostart = false;
        option.domain = qiniuurl;
        //初始化七牛上传控件
        uploader = InitQiniuUpload(option);
    }

    function Init() {

        if (perid === "") {
            return;
        }

        $.get("/api/Activity/GetVotePerViewById?id=" + perid, function (data) {

            if (data.errcode !== 0) {
                alert("获取数据异常！");
                return;
            }

            var obj = data.errmsg;

            voteid = obj.Voteid;

            $("#lblnum").html(obj.Num);
            $("#lblfullname").html(obj.Fullname);
            $("#lblmobile").html(obj.Mobile);

            $("#imgpicture").attr("src", getQiniuUrl(obj.Picture));
            $("#lblip").html(obj.IP);

            $("#divfiles").html("<a href='" + getQiniuUrl(obj.Files) + "'>" + obj.Files + "</a>");
            $("#lblopenid").html(obj.Openid);

            $("#lblcreatedtime").html(Dateformat(obj.Createdtime, "yyyy-MM-dd HH:mm:ss"));
            $("#lblremark").html(obj.Remark);

        });
    }

    function goList() {
        getBodyHtml('mainbody', "/Activity/Activity/VotePerList?voteid=" + voteid);
    }

</script>

