<script type="text/javascript">

    var voteid = "@ViewBag.voteid";

    $(function () {
        Init();
    });

    function Init() {

        if (voteid === "") {
            return;
        }

        $.get("/api/Activity/GetVoteViewById?id=" + voteid, function (data) {

            if (data.errcode !== 0) {
                alert("获取数据异常！");
                return;
            }

            var obj = data.errmsg;

            $("#lbltitle").html(obj.Title);
            $("#lblenrolltime").html(Dateformat(obj.Enrollstarttime, "yyyy-MM-dd HH:mm:ss") + " - " + Dateformat(obj.Enrollendtime, "yyyy-MM-dd HH:mm:ss"));
            $("#lblvotetime").html(Dateformat(obj.Votestarttime, "yyyy-MM-dd HH:mm:ss") + " - " + Dateformat(obj.Voteendtime, "yyyy-MM-dd HH:mm:ss"));

            $("#lblvotemode").html(obj.Votemode);
            $("#lblvoteflow").html(obj.Voteflow);
            $("#lblprizedeac").html(obj.Prizedeac);
            $("#lblattention").html(obj.Attention);

        });
    }

    function goList() {
        getBodyHtml('mainbody', "/Activity/Activity/VoteList");
    }

</script>
